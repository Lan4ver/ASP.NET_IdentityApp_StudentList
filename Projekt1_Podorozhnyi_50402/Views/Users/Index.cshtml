@model IEnumerable<Projekt1_Podorozhnyi_50402.Models.User>

@{
    ViewBag.Title = "Users List";
}

<a asp-action="Create">Add Student</a>

<table class="table">
    <tr><th>Email</th><th>Name</th><th>Surname</th><th>Student Number</th><th>Year</th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Email</td>
    <td>@user.Name</td>
    <td>@user.Surname</td>
    <td>@user.StudentNum</td>
    <td>@user.Year</td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
